{% extends 'SyliusWebBundle:Frontend:productsDetailLayout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block content  %}
                    <div class="row">
                        
                        <div class="col-lg-12 col-md-12 col-sm-12">
                                
                            <div class="carousel-heading no-margin">
                                <h4>Your account details</h4>
                            </div>

                            <div class="page-content">
                               {% if error %}
                                 <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                               {% else %}
                                 <p>If you are already registered please login directly here</p>
                               {% endif %}
                                <form action="{{ path("fos_user_security_check") }}" method="post">
                                  <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                  <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6">
                                        <div class="iconic-input">
                                            <input type="text" id="username" name="_username" value="{{ last_username }}"  placeholder="{{ 'security.login.username'|trans }}" required="required">
                                            <i class="icons icon-user-3"></i>
                                        </div>
                                    </div>
                                    
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <div class="iconic-input">
                                            <input type="password" id="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required">
                                            <i class="icons icon-lock"></i>
                                        </div>
                                    </div>
                                </div>
                                
                                <input type="checkbox" id="remember_me" name="_remeber_me" value="on">
                                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                <br/><br/>
                                <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 align-left">
                                 <input type="submit" id="_submit" name="_submit" class="orange" value="{{'security.login.submit'|trans}}">
                                        </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 align-right">
                                        <small>
                                          <a class="align-right" href="#">Forgot your password?</a>
                                          <br>
                                          <a class="align-right" href="#">Forgot your username?</a>
                                          <br>
                                        </small>
                                    </div>
                                </div>
                             </div>
                            </form>
                        </div>
                          
                    </div>


{% endblock  %}
