{% extends sonata_block.templates.block_base %}

{% block block %}

    {% if block.children %}
        <section class="slider">
          <div class="tp-banner-container">
            <div class="tp-banner" >
              <ul>
                {% for item in block.children %}
                    <li data-transition="zoomout" data-slotamount="7" data-masterspeed="1000">{{ sonata_block_render(item) }}</li>
                {% endfor %}
              </ul>
            </div>
         </section>
    {% endif %}

{% endblock %}
